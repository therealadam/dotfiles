[core]
  excludesfile = /Users/adam/.gitignore
  ; pager = most +s +'/---'
  autocrlf = input

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = blue
  remote = green
[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = red
  untracked = blue
[alias]
  s = status -s
  ci = commit
  cb = checkout -b
  br = branch
  co = checkout
  d  = diff
  ll  = log --stat --summary --abbrev-commit --date=relative
  lp = log --stat --summary --abbrev-commit --no-merges --patch-with-stat
  review = !sh -c 'git log --stat --summary --abbrev-commit --no-merges --patch-with-stat --reverse --since="$0"'
  l = log --oneline -n 15 --no-merges
  b  = branch -a -v
  track = !sh -c 'git branch --track "$0" "origin/$0" && git checkout "$0"'
  ds = diff --staged
  cp = cherry-pick
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ribbon = tag --force _ribbon origin/master
  catchup = log --patch --reverse --topo-order _ribbon..origin/master

[push]
  default = tracking

[apply]
  whitespace = nowarn

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[rerere]
	enabled = 1

